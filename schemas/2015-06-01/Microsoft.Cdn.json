{
    "id": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Microsoft.Cdn",
    "description": "Microsoft Cdn Resource Types",
    "resourceDefinitions": {
        "profiles": {
            "type": "object",
            "description": "The CDN profile",
            "properties": {
                "type": {
                    "enum": [ "Microsoft.Cdn/profiles" ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-06-01"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "sku": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "oneOf": [
                                        {
                                            "enum": [ 
                                                "Standard", 
                                                "Premium" 
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            },
            "required": [
                "type",
                "apiVersion",
                "properties"
            ]
        },
        "endpoints": {
            "type": "object",
            "description": "The CDN endpoint",
            "properties": {
                "type": {
                    "enum": [ "Microsoft.Cdn/profiles/endpoints" ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-06-01"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "originHostHeader": {
                            "type": "string"
                        },
                        "isHttpAllowed": {
                            "type": "boolean"
                        },
                        "isHttpsAllowed": {
                            "type": "boolean"
                        },
                        "originPath": {
                            "type": "string"
                        },
                        "queryStringCachingBehavior": {
                            "oneOf": [
                                {
                                    "enum": [ 
                                        "IgnoreQueryString", 
                                        "BypassCaching",
                                        "UseQueryString"
                                    ]
                                }
                            ]
                        },
                        "contentTypeToCompress": {
                            "type": "array"
                        },
                        "isCompressionEnabled": {
                            "type": "boolean"
                        },
                        "origins": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/origins"
                            }
                        }
                    }
                }
            },
            "required": [
                "type",
                "apiVersion",
                "properties"
            ]
        },
        "origins": {
            "type": "object",
            "description": "The CDN origin",
            "properties": {
                "type": {
                    "enum": [ "Microsoft.Cdn/profiles/endpoints/origins" ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-06-01"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "hostName": {
                            "type": "string"
                        },
                        "httpPort": {
                            "type": "number"
                        },
                        "httpsPort": {
                            "type": "number"
                        }
                    }
                }
            },
            "required": [
                "type",
                "apiVersion",
                "properties"
            ]
        },
        "customdomains": {
            "type": "object",
            "description": "The CDN description",
            "properties": {
                "type": {
                    "enum": [ "Microsoft.Cdn/profiles/endpoints/customdomains" ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-06-01"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "hostName": {
                            "type": "string"
                        }
                    }
                }
            },
            "required": [
                "type",
                "apiVersion",
                "properties"
            ]
        }
    }
}