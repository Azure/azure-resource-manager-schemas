{
    "id": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Microsoft.Cdn",
    "description": "Microsoft Cdn Resource Types",
    "resourceDefinitions": {
        "profiles": {
            "type": "object",
            "description": "The CDN profile",
            "properties": {
                "type": {
                    "enum": [ "Microsoft.Cdn/profiles" ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-06-01"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "sku": {
                            "description": "The sku of CDN profile",
                            "oneOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "oneOf": [
                                                {
                                                    "enum": [ 
                                                        "Standard", 
                                                        "Premium" 
                                                    ]
                                                },
                                                {
                                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                                }
                                            ]
                                        }
                                    },
                                    "required":[
                                        "name"
                                    ]
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        }
                    },
                    "required": [
                        "sku"
                    ]
                }
            },
            "required": [
                "type",
                "apiVersion",
                "properties"
            ]
        },
        "endpoints": {
            "type": "object",
            "description": "The CDN endpoint",
            "properties": {
                "type": {
                    "enum": [ "Microsoft.Cdn/profiles/endpoints" ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-06-01"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "originHostHeader": {
                            "description": "The host header of the CDN endpoint",
                            "type": "string"
                        },
                        "isHttpAllowed": {
                            "description": "Whether or not http traffic is allowed",
                            "oneOf": [
                                {
                                    "type": "boolean"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "isHttpsAllowed": {
                            "description": "Whether or not https traffic is allowed",
                            "oneOf": [
                                {
                                    "type": "boolean"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "originPath": {
                            "description": "The path to content on the origin",
                            "type": "string"
                        },
                        "queryStringCachingBehavior": {
                            "description": "The query string caching behavior",
                            "oneOf": [
                                {
                                    "enum": [ 
                                        "IgnoreQueryString", 
                                        "BypassCaching",
                                        "UseQueryString"
                                    ]
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "contentTypeToCompress": {
                            "description": "The compression type",
                            "oneOf": [
                                {
                                    "type": "array"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "isCompressionEnabled": {
                            "description": "Whether or not compression is enabled",
                            "oneOf": [
                                {
                                    "type": "boolean"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "origins": {
                            "description": "The origin",
                            "oneOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/origins"
                                    }
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]                        
                        }
                    },
                    "required": [
                        "origins"
                    ]
                }
            },
            "required": [
                "type",
                "apiVersion",
                "properties"
            ]
        },
        "origins": {
            "type": "object",
            "description": "The CDN origin",
            "properties": {
                "type": {
                    "enum": [ "Microsoft.Cdn/profiles/endpoints/origins" ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-06-01"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "hostName": {
                            "description": "Host name of the origin",
                            "type": "string"
                        },
                        "httpPort": {
                            "description": "The http port number of the origin",
                            "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/numberOrExpression"
                        },
                        "httpsPort": {
                            "description": "The https port number of the origin",
                            "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/numberOrExpression"
                        }
                    },
                    "required": [
                        "hostName"
                    ]
                }
            },
            "required": [
                "type",
                "apiVersion",
                "properties"
            ]
        },
        "customdomains": {
            "type": "object",
            "description": "The CDN description",
            "properties": {
                "type": {
                    "enum": [ "Microsoft.Cdn/profiles/endpoints/customdomains" ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-06-01"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "hostName": {
                            "description": "Host name of the custom domain",
                            "type": "string"
                        }
                    },
                    "required": [
                        "hostName"
                    ]
                }
            },
            "required": [
                "type",
                "apiVersion",
                "properties"
            ]
        }
    }
}