{
    "id": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Microsoft.Cdn",
    "description": "Microsoft Cdn Resource Types",
    "resourceDefinitions": {
        "profiles": {
            "type": "object",
            "description": "The CDN profile",
            "properties": {
                "type": {
                    "enum": [ "Microsoft.Cdn/profiles" ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-06-01"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "sku": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "someOf": [
                                        {
                                            "enum": [ 
                                                "Standard", 
                                                "Premium" 
                                            ]
                                        },
                                        {
                                            "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                        }
                                    ]
                                }
                            },
                            "required":[
                                "name"
                            ]
                        }
                    },
                    "required": [
                        "sku"
                    ]
                }
            },
            "required": [
                "type",
                "apiVersion",
                "properties"
            ]
        },
        "endpoints": {
            "type": "object",
            "description": "The CDN endpoint",
            "properties": {
                "type": {
                    "enum": [ "Microsoft.Cdn/profiles/endpoints" ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-06-01"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "originHostHeader": {
                            "someOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "isHttpAllowed": {
                            "someOf": [
                                {
                                    "type": "boolean"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "isHttpsAllowed": {
                            "someOf": [
                                {
                                    "type": "boolean"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "originPath": {
                            "someOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "queryStringCachingBehavior": {
                            "someOf": [
                                {
                                    "enum": [ 
                                        "IgnoreQueryString", 
                                        "BypassCaching",
                                        "UseQueryString"
                                    ]
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "contentTypeToCompress": {
                            "someOf": [
                                {
                                    "type": "array"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "isCompressionEnabled": {
                            "someOf": [
                                {
                                    "type": "boolean"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "origins": {
                            "someOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/origins"
                                    }
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]                        
                        }
                    },
                    "required": [
                        "origins"
                    ]
                }
            },
            "required": [
                "type",
                "apiVersion",
                "properties"
            ]
        },
        "origins": {
            "type": "object",
            "description": "The CDN origin",
            "properties": {
                "type": {
                    "enum": [ "Microsoft.Cdn/profiles/endpoints/origins" ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-06-01"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "hostName": {
                            "someOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "httpPort": {
                            "someOf": [
                                {
                                    "type": "number"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "httpsPort": {
                            "someOf": [
                                {
                                    "type": "number"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        }
                    },
                    "required": [
                        "hostName"
                    ]
                }
            },
            "required": [
                "type",
                "apiVersion",
                "properties"
            ]
        },
        "customdomains": {
            "type": "object",
            "description": "The CDN description",
            "properties": {
                "type": {
                    "enum": [ "Microsoft.Cdn/profiles/endpoints/customdomains" ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-06-01"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "hostName": {
                            "someOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        }
                    },
                    "required": [
                        "hostName"
                    ]
                }
            },
            "required": [
                "type",
                "apiVersion",
                "properties"
            ]
        }
    }
}