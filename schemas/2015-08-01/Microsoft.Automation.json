{
    "id": "http://schema.management.azure.com/schemas/2016-06-01/Microsoft.Automation.json#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Microsoft.Automation",
    "description": "Microsoft Automation Resource Types",
    "definitions": {
        "automationAccounts": {
            "type": "object",
            "properties": {
                "type": {
                    "enum": [
                        "Microsoft.Automation/automationAccounts"
                    ]
                },
                "apiVersion": {
                    "enum": [
                        "2015-01-01-preview"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "sku": {
                            "type": "object",
                            "properties": {
                                "family": {
                                    "type": "string",
                                    "description": "Microsoft.Automation/automationAccounts: sku family"
                                },
                                "name": {
                                    "enum": [
                                        "Free",
                                        "Basic"
                                    ],
                                    "description": "Microsoft.Automation/automationAccounts: Automation Account sku name."
                                },
                                "capacity": {
                                    "type": "integer",
                                    "description": "Microsoft.Automation/automationAccounts: sku capacity."
                                }
                            },
                            "description": "Microsoft.Automation/automationAccounts: Automation account sku.",
                            "required": [ "name" ]
                        }
                    },
                    "required": [ "sku" ]
                },
                "name": {
                    "type": "string",
                    "description": "Microsoft.Automation/automationAccounts: Automation account name."
                },
                "location": {
                    "type": "string",
                    "description": "Microsoft.Automation/automationAccounts: location."
                }
            },
            "required": [
                "properties",
                "name",
                "location"
            ]
        },
        "runbooks": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                     "description": "Automation runbook name."
                },
                "location": {
                    "type": "string",
                     "description": "Microsoft.Automation/automationAccounts: location."
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "logVerbose": {
                            "type": "boolean",
                            "description": "Option to log verbose streams."
                        },
                        "logProgress": {
                            "type": "boolean",
                            "description": "Option to log progess streams."
                        },
                        "description": {
                            "type": "string",
                            "description": "Description for the runbook."
                        },
                        "runbookType": {
                            "enum": [
                                "PowerShellWorkflow",
                                "PowerShell",
                                "Graph"
                            ],
                            "description": "Type of runbook."
                        },
                        "publishContentLink": {
                            "type": "object",
                            "properties": {
                                "uri": {
                                    "type": "string",
                                    "description": "Uri where the runbook content can be accessed."
                                },
                                "contentVersion": {
                                    "type": "string",
                                    "description": "Runbook content version."
                                },
                                "contentHash": {
                                    "type": "object",
                                    "properties": {
                                        "algorithm": {
                                            "type": "string",
                                            "description": "Runbook content has algorithm."
                                        },
                                        "value": {
                                            "type": "string",
                                            "description": "Runbook content hash value."
                                        }
                                    }
                                }
                            },
                            "required": [ "uri" ]
                        }
                    },
                    "required": [ "runbookType", "publishedContentLink" ]
                }
            },
            "required": [
                "name",
                "location",
                "properties"
            ]
        }
    }
}