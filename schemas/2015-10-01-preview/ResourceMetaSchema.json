{
    "id": "http://schema.management.azure.com/schemas/2015-09-21/ResourceMetaSchema.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Azure Resource Meta-schema",
    "description": "A schema that can be used to validate Azure resource schemas",
    "type": "object",
    "required": ["id", "$schema", "title", "description", "resourceDefinitions"],
    "properties":
    {
        "id":
        {
            "type": "string",
            "format": "uri"
        },
        "$schema":
        {
            "type": "string",
            "format": "uri"
        },
        "title": { "type": "string" },
        "description": { "$ref": "#/definitions/description" },
        "resourceDefinitions":
        {
            "type": "object",
            "minProperties": 1,
            "additionalProperties":
            {
                "$ref": "#/definitions/resource"
            }
        },
        "definitions":
        {
            "type": "object",
            "minProperties": 1,
            "additionalProperties":
            {
                "$ref": "#/definitions/genericProperty"
            }
        }
    },
    "additionalProperties": false,
    
    "definitions":
    {
        "apiVersion":
        {
            "type": "object",
            "properties":
            {
                "enum":
                {
                    "type": "array",
                    "items":
                    {
                        "type": "string",
                        "pattern": "(^((\\d\\d\\d\\d-\\d\\d-\\d\\d)|([0-9]+(\\.[0-9]+)?))(-[a-zA-Z][a-zA-Z0-9]*)?$)",
                        "description": "API version of the resource type"
                    },
                    "minItems": 1,
                    "uniqueItems": true,
                    "additionalItems": false
                }
            },
            "additionalProperties": true
        },
        "description":
        {
            "type": "string",
            "minLength": 1
        },
        "enum":
        {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true
        },
        "exclusiveMaximum":
        {
            "type": "boolean",
            "default": false
        },
        "exclusiveMinimum":
        {
            "type": "boolean",
            "default": false
        },
        "items":
        {
            "anyOf":
            [
                { "$ref": "#/definitions/genericProperty" },
                { "$ref": "#/definitions/genericPropertyArray" }
            ],
            "default": {}
        },
        "maximum": { "type": "number" },
        "maxItems": { "$ref": "#/definitions/positiveInteger" },
        "maxLength": { "$ref": "#/definitions/positiveInteger" },
        "maxProperties": { "$ref": "#/definitions/positiveInteger" },
        "minimum": { "type": "number" },
        "minItems": { "$ref": "#/definitions/positiveIntegerDefault0" },
        "minLength": { "$ref": "#/definitions/positiveIntegerDefault0" },
        "minProperties": { "$ref": "#/definitions/positiveIntegerDefault0" },
        "multipleOf":
        {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
        },
        "pattern":
        {
            "type": "string",
            "format": "regex"
        },
        "positiveInteger":
        {
            "type": "integer",
            "minimum": 0
        },
        "positiveIntegerDefault0":
        {
            "allOf":
            [
                { "$ref": "#/definitions/positiveInteger" },
                { "default": 0 }
            ]
        },
        "required": { "$ref": "#/definitions/stringArrayEmptyOkay" },
        "simpleTypes":
        {
            "enum": [ "array", "boolean", "integer", "null", "number", "object", "string" ]
        },
        "stringArray":
        {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1,
            "uniqueItems": true
        },
        "stringArrayEmptyOkay":
        {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
        },
        "type":
        {
            "anyOf":
            [
                { "$ref": "#/definitions/simpleTypes" },
                {
                    "type": "array",
                    "items": { "$ref": "#/definitions/simpleTypes" },
                    "minItems": 1,
                    "uniqueItems": true
                }
            ]
        },
        "uniqueItems":
        {
            "type": "boolean",
            "default": false
        },
        
        "resource":
        {
            "type": "object",
            "required": [ "description" ],
            "properties":
            {
                "type": { "enum": [ "object" ] },
                "description": { "$ref": "#/definitions/description" },
                "required": { "$ref": "#/definitions/stringArrayEmptyOkay" },
                "properties":
                {
                    "type": "object",
                    "minProperties": 1,
                    "required": [ "apiVersion" ],
                    "properties":
                    {
                        "type": {},
                        "apiVersion": { "$ref": "#/definitions/apiVersion" },
                        "properties": {},
                        "resources":
                        {
                            "type": "object",
                            "required": [ "type", "items", "description"],
                            "properties":
                            {
                                "type": { "enum": [ "array" ] },
                                "description": { "$ref": "#/definitions/description" },
                                "items": { "type": "object" }
                            }
                        }
                    },
                    "additionalProperties":
                    {
                        "$ref": "#/definitions/resourceProperty"
                    }
                }
            }
        },
        
        "resourcePropertyArray":
        {
            "type": "array",
            "minItems": 1,
            "items": { "$ref": "#/definitions/resourceProperty" }
        },
        "resourceProperty":
        {
            "type": "object",
            "required": [ "description" ],
            "dependencies":
            {
                "exclusiveMaximum": [ "maximum" ],
                "exclusiveMinimum": [ "minimum" ]
            },
            "properties":
            {
                "default": {},
                "description": { "$ref": "#/definitions/description" },
                "enum": { "$ref": "#/definitions/enum" },
                "exclusiveMinimum": { "$ref": "#/definitions/exclusiveMinimum" },
                "exclusiveMaximum": { "$ref": "#/definitions/exclusiveMaximum" },
                "maximum": { "$ref": "#/definitions/maximum" },
                "maxItems": { "$ref": "#/definitions/maxItems" },
                "maxLength": { "$ref": "#/definitions/maxLength" },
                "maxProperties": { "$ref": "#/definitions/maxProperties" },
                "minimum": { "$ref": "#/definitions/minimum" },
                "minItems": { "$ref": "#/definitions/minItems" },
                "minLength": { "$ref": "#/definitions/minLength" },
                "minProperties": { "$ref": "#/definitions/minProperties" },
                "multipleOf": { "$ref": "#/definitions/multipleOf" },
                "pattern": { "$ref": "#/definitions/pattern" },
                "required": { "$ref": "#/definitions/required" },
                "type": { "$ref": "#/definitions/type" },
                "uniqueItems": { "$ref": "#/definitions/uniqueItems" },
                
                "additionalItems":
                {
                    "anyOf":
                    [
                        { "type": "boolean" },
                        { "$ref": "#/definitions/resourceProperty" }
                    ]
                },
                "items": { "$ref": "#/definitions/items" },
                
                "additionalProperties":
                {
                    "anyOf":
                    [
                        { "type": "boolean" },
                        { "$ref": "#/definitions/resourceProperty" }
                    ],
                    "default": {}
                },
                "properties":
                {
                    "type": "object",
                    "additionalProperties": { "$ref": "#/definitions/resourceProperty" },
                    "default": {}
                },
                "patternProperties":
                {
                    "type": "object",
                    "additionalProperties": { "$ref": "#/definitions/resourceProperty" },
                    "default": {}
                },
                
                "dependencies":
                {
                    "type": "object",
                    "additionalProperties":
                    {
                        "anyOf":
                        [
                            { "$ref": "#/definitions/resourceProperty" },
                            { "$ref": "#/definitions/stringArray" }
                        ]
                    }
                },
                
                "allOf": { "$ref": "#/definitions/genericPropertyArray" },
                "anyOf": { "$ref": "#/definitions/genericPropertyArray" },
                "oneOf": { "$ref": "#/definitions/genericPropertyArray" },
                "not": { "$ref": "#/definitions/genericProperty" },
                "resources": { "$ref": "#/definitions/genericProperty" }
            },
            "additionalProperties":
            {
                "$ref": "#/definitions/genericProperty"
            }
        },
        
        "genericPropertyArray":
        {
            "type": "array",
            "minItems": 1,
            "items": { "$ref": "#/definitions/genericProperty" }
        },
        "genericProperty":
        {
            "properties":
            {
                "default": {},
                "description": { "$ref": "#/definitions/description" },
                "enum": { "$ref": "#/definitions/enum" },
                "exclusiveMinimum": { "$ref": "#/definitions/exclusiveMinimum" },
                "exclusiveMaximum": { "$ref": "#/definitions/exclusiveMaximum" },
                "maximum": { "$ref": "#/definitions/maximum" },
                "maxItems": { "$ref": "#/definitions/maxItems" },
                "maxLength": { "$ref": "#/definitions/maxLength" },
                "maxProperties": { "$ref": "#/definitions/maxProperties" },
                "minimum": { "$ref": "#/definitions/minimum" },
                "minItems": { "$ref": "#/definitions/minItems" },
                "minLength": { "$ref": "#/definitions/minLength" },
                "minProperties": { "$ref": "#/definitions/minProperties" },
                "multipleOf": { "$ref": "#/definitions/multipleOf" },
                "pattern": { "$ref": "#/definitions/pattern" },
                "required": { "$ref": "#/definitions/required" },
                "type": { "$ref": "#/definitions/type" },
                "uniqueItems": { "$ref": "#/definitions/uniqueItems" },
                
                "additionalItems":
                {
                    "anyOf":
                    [
                        { "type": "boolean" },
                        { "$ref": "#/definitions/genericProperty" }
                    ]
                },
                "items": { "$ref": "#/definitions/items" },
                
                "additionalProperties":
                {
                    "anyOf":
                    [
                        {
                            "type": "boolean",
                            "default": true
                        },
                        { "$ref": "#/definitions/genericProperty" }
                    ],
                    "default": {}
                },
                "properties":
                {
                    "type": "object",
                    "additionalProperties": { "$ref": "#/definitions/genericProperty" },
                    "default": {}
                },
                "patternProperties":
                {
                    "type": "object",
                    "additionalProperties": { "$ref": "#/definitions/genericProperty" },
                    "default": {}
                },
                
                "dependencies":
                {
                    "type": "object",
                    "additionalProperties":
                    {
                        "anyOf":
                        [
                            { "$ref": "#/definitions/genericProperty" },
                            { "$ref": "#/definitions/stringArray" }
                        ]
                    }
                },
                
                "allOf": { "$ref": "#/definitions/genericPropertyArray" },
                "anyOf": { "$ref": "#/definitions/genericPropertyArray" },
                "oneOf": { "$ref": "#/definitions/genericPropertyArray" },
                "not": { "$ref": "#/definitions/genericProperty" }
            }
        }
    }
}