{
    "id": "http://schema.management.azure.com/schemas/2015-11-01/Microsoft.Network.json#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Microsoft.Network",
    "description": "Microsoft Network Resource Types",
    "resourceDefinitions": {
        "trafficManagerProfiles": {
            "type": "object",
            "properties": {
                "apiVersion": {
                    "enum": [
                        "2015-11-01"
                    ]
                },
                "name": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "Microsoft.Network/trafficManagerProfiles"
                    ]
                },
                "properties": {
                    "type": "object",
                    "properties": {
                        "profileStatus": {
                            "oneOf": [
                                {
                                    "enum": [
                                        "Enabled",
                                        "Disabled"
                                    ]
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "trafficRoutingMethod": {
                            "oneOf": [
                                {
                                    "enum": [
                                        "Performance",
                                        "Priority",
                                        "Weighted"
                                    ]
                                },
                                {
                                    "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                }
                            ]
                        },
                        "dnsConfig": {
                            "type": "object",
                            "properties": {
                                "relativeName": {
                                    "type": "string"
                                },
                                "ttl": {
                                    "oneOf": [
                                        {
                                            "type": "integer",
                                            "minimum": 30,
                                            "maximum": 2147483647
                                        },
                                        {
                                            "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                        }
                                    ]
                                },
                                "fqdn": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "relativeName",
                                "ttl"
                            ],
                            "additionalProperties": false
                        },
                        "monitorConfig": {
                            "type": "object",
                            "properties": {
                                "protocol": {
                                    "oneOf": [
                                        {
                                            "enum": [
                                                "HTTP",
                                                "HTTPS"
                                            ]
                                        },
                                        {
                                            "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                        }
                                    ]
                                },
                                "port": {
                                    "oneOf": [
                                        {
                                            "type": "integer",
                                            "minimum": 1,
                                            "maximum": 65535
                                        },
                                        {
                                            "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                        }
                                    ]
                                },
                                "path": {
                                     "type": "string"
                                }
                            },
                            "required": [
                                "protocol",
                                "port",
                                "path"
                            ],
                            "additionalProperties": false
                        },
                        "endpoints": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "type": {
                                         "enum": [
                                              "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                                              "Microsoft.Network/trafficManagerProfiles/externalEndpoints",
                                              "Microsoft.Network/trafficManagerProfiles/nestedEndpoints"
                                        ]
                                    },
                                    "properties": {
                                        "type": "object",
                                        "properties": {
                                            "endpointStatus": {
                                                "oneOf": [
                                                    {
                                                        "enum": [
                                                            "Enabled",
                                                            "Disabled"
                                                        ]
                                                    },
                                                    {
                                                        "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                                    }
                                                ]
                                            },
                                            "targetResourceId": {
                                                "type": "string"
                                            },
                                            "target": {
                                                "type": "string"
                                            },
                                            "weight": {
                                                "oneOf": [
                                                    {
                                                        "type": "integer",
                                                        "minimum": 1,
                                                        "maximum": 1000
                                                    },
                                                    {
                                                        "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                                    }
                                                ]
                                            },
                                            "priority": {
                                                "oneOf": [
                                                    {
                                                        "type": "integer",
                                                        "minimum": 1,
                                                        "maximum": 1000
                                                    },
                                                    {
                                                        "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                                    }
                                                ]
                                            },
                                            "endpointLocation": {
                                                "type": "string"
                                            },
                                            "minChildEndpoints": {
                                                "oneOf": [
                                                    {
                                                        "type": "integer",
                                                        "minimum": 1
                                                    },
                                                    {
                                                        "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                },
                                "required": [
                                    "name",
                                    "type",
                                    "properties"
                                ]
                            }
                        }
                    },
                    "required": [
                        "trafficRoutingMethod",
                        "dnsConfig",
                        "monitorConfig"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "apiVersion",
                "name",
                "type",
                "properties"
            ]
        }
    }
}
