{
  "id": "https://schema.management.azure.com/schemas/2016-03-01/Microsoft.Insights.json#",
  "title": "Microsoft.Insights",
  "description": "Microsoft Insights Resource Types",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "resourceDefinitions": {
    "alertrules": {
      "description": "Microsoft.Insights/alertrules",
      "properties": {
        "apiVersion": {
          "enum": [
            "2016-03-01"
          ],
          "type": "string"
        },
        "location": {
          "description": "Resource location",
          "type": "string"
        },
        "name": {
          "description": "The name of the rule.",
          "type": "string"
        },
        "properties": {
          "description": "The alert rule properties of the resource.",
          "oneOf": [
            {
              "$ref": "#/definitions/AlertRule"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "tags": {
          "description": "Resource tags",
          "oneOf": [
            {
              "additionalProperties": {
                "type": "string"
              },
              "properties": {},
              "type": "object"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "type": {
          "enum": [
            "Microsoft.Insights/alertrules"
          ],
          "type": "string"
        }
      },
      "required": [
        "name",
        "properties",
        "apiVersion",
        "type"
      ],
      "type": "object"
    }
  },
  "subscription_resourceDefinitions": {
    "logprofiles": {
      "description": "Microsoft.Insights/logprofiles",
      "properties": {
        "apiVersion": {
          "enum": [
            "2016-03-01"
          ],
          "type": "string"
        },
        "location": {
          "description": "Resource location",
          "type": "string"
        },
        "name": {
          "description": "The name of the log profile.",
          "type": "string"
        },
        "properties": {
          "description": "The log profile properties of the resource.",
          "oneOf": [
            {
              "$ref": "#/definitions/LogProfileProperties"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "tags": {
          "description": "Resource tags",
          "oneOf": [
            {
              "additionalProperties": {
                "type": "string"
              },
              "properties": {},
              "type": "object"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "type": {
          "enum": [
            "Microsoft.Insights/logprofiles"
          ],
          "type": "string"
        }
      },
