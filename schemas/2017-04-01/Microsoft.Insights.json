{
  "id": "https://schema.management.azure.com/schemas/2017-04-01/Microsoft.Insights.json#",
  "title": "microsoft.insights",
  "description": "microsoft insights Resource Types",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "resourceDefinitions": {
