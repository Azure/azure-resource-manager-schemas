          "type": "string"
        },
        "properties": {
          "description": "The action groups properties of the resource.",
          "oneOf": [
            {
              "$ref": "#/definitions/ActionGroup"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
