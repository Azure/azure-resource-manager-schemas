{
  "id": "https://schema.management.azure.com/schemas/2018-10-01/Microsoft.Portal.json#",
  "title": "Microsoft.Portal",
  "description": "Microsoft Portal Resource Types",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "tenant_resourceDefinitions": {
    "consoles": {
      "type": "object",
      "properties": {
        "apiVersion": {
          "type": "string",
          "enum": [
            "2018-10-01"
          ]
        },
        "name": {
          "type": "string",
          "description": "The resource name"
        },
        "type": {
          "type": "string",
          "enum": [
            "Microsoft.Portal/consoles"
          ]
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/ConsoleCreatePropertiesOrConsoleProperties"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "Cloud shell properties for creating a console."
        }
      },
      "required": [
        "name",
        "apiVersion",
        "type",
        "properties"
      ],
      "description": "Microsoft.Portal/consoles"
    },
    "locations_consoles": {
      "type": "object",
      "properties": {
        "apiVersion": {
          "type": "string",
          "enum": [
            "2018-10-01"
          ]
        },
        "name": {
          "type": "string",
          "description": "The resource name"
        },
        "type": {
          "type": "string",
          "enum": [
            "Microsoft.Portal/locations/consoles"
          ]
        }
      },
      "required": [
        "name",
        "apiVersion",
        "type"
      ],
      "description": "Microsoft.Portal/locations/consoles"
    },
    "locations_userSettings": {
      "type": "object",
      "properties": {
        "apiVersion": {
          "type": "string",
          "enum": [
            "2018-10-01"
          ]
        },
        "name": {
          "type": "string",
          "description": "The resource name"
        },
        "type": {
          "type": "string",
          "enum": [
            "Microsoft.Portal/locations/userSettings"
          ]
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/UserProperties"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "The cloud shell user settings properties."
        }
      },
      "required": [
        "name",
        "apiVersion",
        "type",
        "properties"
      ],
      "description": "Microsoft.Portal/locations/userSettings"
    },
    "userSettings": {
      "type": "object",
      "properties": {
        "apiVersion": {
          "type": "string",
          "enum": [
            "2018-10-01"
          ]
        },
        "name": {
          "type": "string",
          "description": "The resource name"
        },
        "type": {
          "type": "string",
          "enum": [
            "Microsoft.Portal/userSettings"
          ]
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/UserProperties"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "The cloud shell user settings properties."
        }
      },
      "required": [
        "name",
        "apiVersion",
        "type",
        "properties"
      ],
      "description": "Microsoft.Portal/userSettings"
    }
  },
  "definitions": {
    "ConsoleCreatePropertiesOrConsoleProperties": {
      "type": "object",
      "properties": {
        "osType": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "Linux",
                "Windows"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "The operating system type of the cloud shell."
        },
        "provisioningState": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "NotSpecified",
                "Accepted",
                "Pending",
                "Updating",
                "Creating",
                "Repairing",
                "Failed",
                "Canceled",
                "Succeeded"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "Provisioning state of the console."
        },
        "uri": {
          "type": "string",
          "description": "Uri of the console."
        }
      },
      "required": [
        "osType"
      ]
    },
    "StorageProfile": {
      "type": "object",
      "properties": {
        "diskSizeInGB": {
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "Size of file share"
        },
        "fileShareName": {
          "type": "string",
          "description": "Name of the mounted file share. 63 characters or less, lowercase alphabet, numbers, and -"
        },
        "storageAccountResourceId": {
          "type": "string",
          "description": "Full resource ID of storage account."
        }
      }
    },
    "TerminalSettings": {
      "type": "object",
      "properties": {
        "fontSize": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "NotSpecified",
                "Small",
                "Medium",
                "Large"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "Size of terminal font."
        },
        "fontStyle": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "NotSpecified",
                "Monospace",
                "Courier"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "Style of terminal font."
        }
      }
    },
    "UserProperties": {
      "type": "object",
      "properties": {
        "preferredLocation": {
          "type": "string",
          "description": "The preferred location of the cloud shell."
        },
        "preferredOsType": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "Linux",
                "Windows"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "The operating system type of the cloud shell. Deprecated, use preferredShellType."
        },
        "preferredShellType": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "bash",
                "pwsh",
                "powershell"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "The shell type of the cloud shell."
        },
        "storageProfile": {
          "oneOf": [
            {
              "$ref": "#/definitions/StorageProfile"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "The storage profile of the user settings."
        },
        "terminalSettings": {
          "oneOf": [
            {
              "$ref": "#/definitions/TerminalSettings"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "Settings for terminal appearance."
        }
      },
      "required": [
        "preferredLocation",
        "preferredOsType",
        "preferredShellType",
        "storageProfile",
        "terminalSettings"
      ]
    }
  }
}