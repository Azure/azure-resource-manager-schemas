  "definitions": {
    "ActionGroup": {
      "type": "object",
      "properties": {
        "actionGroupId": {
          "type": "string",
          "description": "Action group to trigger if action rule matches"
        },
        "type": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "ActionGroup"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "Indicates type of action rule"
        }
      },
      "required": [
        "actionGroupId",
        "type"
      ]
    },
    "ActionRuleProperties": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "conditions": {
              "oneOf": [
                {
                  "$ref": "#/definitions/Conditions"
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
                }
              ],
              "description": "conditions on which alerts will be filtered"
            },
            "description": {
              "type": "string",
              "description": "Description of action rule"
            },
            "scope": {
              "oneOf": [
                {
                  "$ref": "#/definitions/Scope"
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
                }
              ],
              "description": "scope on which action rule will apply"
            },
            "status": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": [
                    "Enabled",
                    "Disabled"
                  ]
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
                }
              ],
              "description": "Indicates if the given action rule is enabled or disabled"
            },
            "type": {
              "type": "string",
              "enum": [
                "ActionGroup",
                "Diagnostics",
                "Suppression"
              ]
            }
          },
          "required": [
            "type"
          ],
          "additionalProperties": false
        },
        {
          "oneOf": [
            {
              "allOf": [
                {
                  "$ref": "#/definitions/ActionGroup"
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "const": "ActionGroup"
                    }
                  },
                  "required": [
                    "type"
                  ]
                }
              ]
            },
            {
              "allOf": [
                {
                  "$ref": "#/definitions/Diagnostics"
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "const": "Diagnostics"
                    }
                  },
                  "required": [
                    "type"
                  ]
                }
              ]
            },
            {
              "allOf": [
                {
                  "$ref": "#/definitions/Suppression"
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "const": "Suppression"
                    }
                  },
                  "required": [
                    "type"
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    "Condition": {
      "type": "object",
      "properties": {
        "operator": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "Equals",
                "NotEquals",
                "Contains",
                "DoesNotContain"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "operator for a given condition"
        },
        "values": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "list of values to match for a given condition."
        }
      }
    },
    "Conditions": {
      "type": "object",
      "properties": {
        "alertContext": {
          "oneOf": [
            {
              "$ref": "#/definitions/Condition"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "filter alerts by alert context (payload)"
        },
        "alertRuleId": {
          "oneOf": [
            {
              "$ref": "#/definitions/Condition"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "filter alerts by alert rule id"
        },
        "alertRuleName": {
          "oneOf": [
            {
              "$ref": "#/definitions/Condition"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "filter alerts by alert rule name"
        },
        "description": {
          "oneOf": [
            {
              "$ref": "#/definitions/Condition"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "filter alerts by alert rule description"
        },
        "monitorCondition": {
          "oneOf": [
            {
              "$ref": "#/definitions/Condition"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "filter alerts by monitor condition"
        },
        "monitorService": {
          "oneOf": [
            {
              "$ref": "#/definitions/Condition"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "filter alerts by monitor service"
        },
        "severity": {
          "oneOf": [
            {
              "$ref": "#/definitions/Condition"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "filter alerts by severity"
        },
        "targetResourceType": {
          "oneOf": [
            {
              "$ref": "#/definitions/Condition"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "filter alerts by target resource type"
        }
      }
    },
    "Diagnostics": {
      "type": "object",
      "properties": {
        "type": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "Diagnostics"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "Indicates type of action rule"
        }
      },
      "required": [
        "type"
      ]
    },
    "ManagedResourceTags": {
      "type": "object",
      "properties": {},
      "additionalProperties": {
        "type": "string"
      }
    },
    "Scope": {
      "type": "object",
      "properties": {
        "scopeType": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "ResourceGroup",
                "Resource",
                "Subscription"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "type of target scope"
        },
        "values": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "list of ARM IDs of the given scope type which will be the target of the given action rule."
        }
      }
    },
    "Suppression": {
      "type": "object",
      "properties": {
        "suppressionConfig": {
          "oneOf": [
            {
              "$ref": "#/definitions/SuppressionConfig"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "suppression configuration for the action rule"
        },
        "type": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "Suppression"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "Indicates type of action rule"
