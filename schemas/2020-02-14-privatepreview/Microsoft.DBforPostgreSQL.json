        "delegatedVnetID": {
          "type": "string",
          "description": "delegated vNet ID"
        },
        "delegatedVnetName": {
          "type": "string",
          "description": "delegated vNet name"
        },
        "delegatedVnetResourceGroup": {
          "type": "string",
          "description": "delegated vNet resource group name"
        }
      }
    },
    "Sku": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
