      "description": "Set of rules for sending metrics for the Monitor resource.",
      "properties": {
        "filteringTags": {
          "description": "List of filtering tags to be used for capturing metrics.",
          "oneOf": [
            {
              "items": {
                "$ref": "#/definitions/FilteringTag"
              },
              "type": "array"
