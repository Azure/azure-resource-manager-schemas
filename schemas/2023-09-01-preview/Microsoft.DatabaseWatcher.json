        }
      },
      "required": [
        "apiVersion",
        "name",
        "properties",
        "type"
      ],
      "description": "Microsoft.DatabaseWatcher/watchers/sharedPrivateLinkResources"
    },
    "watchers_targets": {
      "type": "object",
