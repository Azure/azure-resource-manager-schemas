{
  "id": "https://schema.management.azure.com/schemas/2024-07-09-preview/Microsoft.ConfidentialLedger.json#",
  "title": "Microsoft.ConfidentialLedger",
  "description": "Microsoft ConfidentialLedger Resource Types",
