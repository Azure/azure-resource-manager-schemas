                {
                  "type": "object",
                  "properties": {
                    "kind": {
                      "const": "Automatic"
                    }
                  },
                  "required": [
                    "kind"
                  ]
                }
              ]
            },
            {
              "allOf": [
                {
                  "$ref": "#/definitions/ManualResourcePredictionsProfile"
                },
                {
                  "type": "object",
                  "properties": {
                    "kind": {
                      "const": "Manual"
                    }
                  },
                  "required": [
                    "kind"
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
