    },
    "NfsProtocolProperties": {
      "description": "Properties specific to the NFS protocol.",
      "properties": {
        "rootSquash": {
          "description": "Root squash defines how root users on clients are mapped to the NFS share.",
          "oneOf": [
            {
              "enum": [
                "NoRootSquash",
                "RootSquash",
                "AllSquash"
              ],
              "type": "string"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        }
      },
      "type": "object"
    },
    "PublicAccessProperties": {
      "description": "The set of properties for control public access.",
      "properties": {
        "allowedSubnets": {
          "description": "The allowed set of subnets when access is restricted.",
          "oneOf": [
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
