{
  "id": "https://schema.management.azure.com/schemas/2025-12-01-preview/Microsoft.IoTFirmwareDefense.json#",
  "title": "Microsoft.IoTFirmwareDefense",
  "description": "Microsoft IoTFirmwareDefense Resource Types",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "resourceDefinitions": {
    "workspaces": {
      "description": "Microsoft.IoTFirmwareDefense/workspaces",
      "properties": {
        "apiVersion": {
          "enum": [
            "2025-12-01-preview"
          ],
          "type": "string"
        },
        "location": {
          "description": "The geo-location where the resource lives",
          "type": "string"
        },
        "name": {
          "description": "The name of the firmware analysis workspace.",
          "oneOf": [
            {
              "pattern": "^[a-zA-Z0-9][a-zA-Z0-9_.-]*$",
              "type": "string"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "properties": {
          "description": "The resource-specific properties for this resource.",
          "oneOf": [
            {
              "$ref": "#/definitions/WorkspaceProperties"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "resources": {
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/workspaces_firmwares_childResource"
              }
            ]
          },
          "type": "array"
        },
        "sku": {
          "description": "The SKU (Stock Keeping Unit) assigned to this resource.",
          "oneOf": [
            {
              "$ref": "#/definitions/Sku"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "tags": {
          "description": "Resource tags.",
          "oneOf": [
            {
              "additionalProperties": {
                "type": "string"
              },
              "properties": {},
              "type": "object"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "type": {
          "enum": [
            "Microsoft.IoTFirmwareDefense/workspaces"
          ],
          "type": "string"
        }
      },
      "required": [
        "name",
        "properties",
        "apiVersion",
        "type"
      ],
      "type": "object"
    },
    "workspaces_firmwares": {
      "description": "Microsoft.IoTFirmwareDefense/workspaces/firmwares",
      "properties": {
        "apiVersion": {
          "enum": [
            "2025-12-01-preview"
          ],
          "type": "string"
        },
        "name": {
          "description": "The id of the firmware.",
          "oneOf": [
            {
              "pattern": "^[a-zA-Z0-9][a-zA-Z0-9_.-]*$",
              "type": "string"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "properties": {
          "description": "The resource-specific properties for this resource.",
          "oneOf": [
            {
              "$ref": "#/definitions/FirmwareProperties"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "type": {
          "enum": [
            "Microsoft.IoTFirmwareDefense/workspaces/firmwares"
          ],
          "type": "string"
        }
      },
      "required": [
        "name",
        "properties",
        "apiVersion",
        "type"
      ],
      "type": "object"
    }
  },
  "definitions": {
    "FirmwareProperties": {
      "description": "Firmware properties.",
      "properties": {
        "description": {
          "description": "User-specified description of the firmware.",
          "type": "string"
        },
        "fileName": {
          "description": "File name for a firmware that user uploaded.",
          "type": "string"
        },
        "fileSize": {
          "description": "File size of the uploaded firmware image.",
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "model": {
          "description": "Firmware model.",
          "type": "string"
        },
        "status": {
          "description": "The status of firmware scan.",
          "oneOf": [
            {
              "enum": [
                "Pending",
                "Extracting",
                "Analyzing",
                "Ready",
                "Error"
              ],
              "type": "string"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "statusMessages": {
          "description": "A list of errors or other messages generated during firmware analysis",
          "oneOf": [
            {
              "items": {
                "$ref": "#/definitions/StatusMessage"
              },
              "type": "array"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "vendor": {
          "description": "Firmware vendor.",
          "type": "string"
        },
        "version": {
          "description": "Firmware version.",
          "type": "string"
        }
      },
      "type": "object"
    },
    "Sku": {
      "description": "The resource model definition representing SKU",
      "properties": {
        "capacity": {
          "description": "If the SKU supports scale out/in then the capacity integer should be included. If scale out/in is not possible for the resource this may be omitted.",
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "family": {
          "description": "If the service has different generations of hardware, for the same SKU, then that can be captured here.",
          "type": "string"
        },
        "name": {
          "description": "The name of the SKU. E.g. P3. It is typically a letter+number code",
          "type": "string"
        },
        "size": {
          "description": "The SKU size. When the name field is the combination of tier and some other value, this would be the standalone code. ",
          "type": "string"
        },
        "tier": {
          "description": "This field is required to be implemented by the Resource Provider if the service has more than one tier, but is not required on a PUT.",
          "oneOf": [
            {
              "enum": [
                "Free",
                "Basic",
                "Standard",
                "Premium"
              ],
              "type": "string"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        }
      },
      "required": [
        "name"
      ],
      "type": "object"
    },
    "StatusMessage": {
      "description": "Error and status message",
      "properties": {
        "errorCode": {
          "description": "The error code",
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ]
        },
        "message": {
          "description": "The error or status message",
          "type": "string"
        }
      },
      "type": "object"
    },
    "WorkspaceProperties": {
      "description": "Workspace properties.",
      "properties": {},
      "type": "object"
    },
