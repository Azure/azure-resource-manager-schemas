{
  "tests": [
		{
			"name": "ApiManagement - Version 2014-02-14 - Minimal",
			"definition": "http://schema.management.azure.com/schemas/2014-02-14/Microsoft.ApiManagement.json#/resourceDefinitions/service",
			"json": {
				"name": "ApiManagementInstance",
				"type": "Microsoft.ApiManagement/service",
				"location": "West US",
				"apiVersion": "2014-02-14",
				"properties": {
					"publisherEmail": "admin@live.com",
					"publisherName": "org",
					"sku": {
					  "name": "Developer",
					  "capacity": 1
					}
				}
			}
		},
		
		{
			"name": "ApiManagement - Version 2014-02-14 - Without apiVersion",
			"expectedErrors": [
				{
					"message": "Missing required property: apiVersion",
					"dataPath": "/"
				}
			],
			"definition": "http://schema.management.azure.com/schemas/2014-02-14/Microsoft.ApiManagement.json#/resourceDefinitions/service",
			"json": {
				"name": "ApiManagementInstance",
				"type": "Microsoft.ApiManagement/service",
				"location": "West US",
				"properties": {
					"publisherEmail": "admin@live.com",
					"publisherName": "org",
					"sku": {
					  "name": "Developer",
					  "capacity": 1
					}
				}
			}
		},

		{
			"name": "ApiManagement - Version 2014-02-14 - Without SKU in properties",
			"expectedErrors": [
				{
					"message": "Data does not match any schemas from \"oneOf\"",
					"dataPath": "/properties",
					"schemaPath": "/properties/properties/oneOf",
					"subErrors":     [
					  {
						"message": "Missing required property: sku",
						"dataPath": "/properties",
						"schemaPath": "/properties/properties/oneOf/0/required/2"
					  },
					  {
						"message": "Invalid type: object (expected string)",
						"dataPath": "/properties",
						"schemaPath": "/properties/properties/oneOf/1/type"
					  }
					]
				  }
			],
			"definition": "http://schema.management.azure.com/schemas/2014-02-14/Microsoft.ApiManagement.json#/resourceDefinitions/service",
			"json": {
				"name": "ApiManagementInstance",
				"type": "Microsoft.ApiManagement/service",
				"apiVersion": "2014-02-14",
				"location": "West US",
				"properties": {
					"publisherEmail": "admin@live.com",
					"publisherName": "org"					
				}
			}
		}	    
   ]
}