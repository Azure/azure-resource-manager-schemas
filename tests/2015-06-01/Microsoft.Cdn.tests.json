{
    "tests": [
        {
            "name": "Creates CDN profile resource",
            "definition": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#/resourceDefinitions/profiles",
            "json": {
                "type": "Microsoft.Cdn/profiles",
                "apiVersion": "2015-06-01",
                "location": "East US",
                "properties": {
                    "sku": {
                        "name":"Standard"
                    }
                }
            }
        },
        
        {
            "name": "Creates CDN profile resource with no sku name should fail",
            "expectedErrors": [
                {
                    "message": "Missing required property: name",
                    "dataPath": "/properties/sku"
                }
            ],
            "definition": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#/resourceDefinitions/profiles",
            "json": {
                "type": "Microsoft.Cdn/profiles",
                "apiVersion": "2015-06-01",
                "location": "East US",
                "properties": {
                    "sku": {
                    }
                }
            }
        },
        
        {
            "name": "Creates CDN endpoint resource with minimum information",
            "definition": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#/resourceDefinitions/endpoints",
            "json": {
                "type": "Microsoft.Cdn/profiles/endpoints",
                "apiVersion": "2015-06-01",
                "location": "East US",
                "properties": {
                    "origins": [
                        {
                            "name": "origin1",
                            "properties": {
                                "hostName": "host1.hello.com",
                                "httpPort": 8080
                            }
                        }
                    ]
                }
            }
        },
        
        {
            "name": "Creates CDN endpoint",
            "definition": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#/resourceDefinitions/endpoints",
            "json": {
                "type": "Microsoft.Cdn/profiles/endpoints",
                "apiVersion": "2015-06-01",
                "location": "East US",
                "properties": {
                    "originHostHeader": "www.microsoft.com",
                    "isHttpAllowed": true,
                    "isHttpsAllowed": true,
                    "originPath": "/mypicture",
                    "queryStringCachingBehavior": "IgnoreQueryString",
                    "contentTypesToCompress": [ "text/html", "text/css" ],
                    "isCompressionEnabled": true,
                    "origins": [
                        {
                            "name": "origin1",
                            "properties": {
                                "hostName": "host1.hello.com",
                                "httpPort": 8080
                            }
                        }
                    ]
                }
            }
        },
        
        {
            "name": "Creates CDN endpoint with missing origin should fail",
            "expectedErrors": [
                {
                    "message": "Missing required property: origins",
                    "dataPath": "/properties"
                }
            ],
            "definition": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#/resourceDefinitions/endpoints",
            "json": {
                "type": "Microsoft.Cdn/profiles/endpoints",
                "apiVersion": "2015-06-01",
                "location": "East US",
                "properties": {
                    "originHostHeader": "www.microsoft.com",
                    "isHttpAllowed": true,
                    "isHttpsAllowed": true,
                    "originPath": "/mypicture",
                    "queryStringCachingBehavior": "IgnoreQueryString",
                    "contentTypesToCompress": [ "text/html", "text/css" ],
                    "isCompressionEnabled": true
                }
            }
        },
        
        {
            "name": "Creates CDN origin resource",
            "definition": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#/resourceDefinitions/origins",
            "json": {
                "type": "Microsoft.Cdn/profiles/endpoints/origins",
                "apiVersion": "2015-06-01",
                "properties": {
                    "hostName": "host1.hello.com",
                    "httpPort": 8080,
                    "httpsPort": 443
                }
            }
        },
        
        {
            "name": "Creates CDN origin resource with minimum information",
            "definition": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#/resourceDefinitions/origins",
            "json": {
                "type": "Microsoft.Cdn/profiles/endpoints/origins",
                "apiVersion": "2015-06-01",
                "properties": {
                    "hostName": "host1.hello.com"
                }
            }
        },
        
        {
            "name": "Creates CDN origin resource with no host name should fail",
            "expectedErrors": [
                {
                    "message": "Missing required property: hostName",
                    "dataPath": "/properties"
                }
            ],
            "definition": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#/resourceDefinitions/origins",
            "json": {
                "type": "Microsoft.Cdn/profiles/endpoints/origins",
                "apiVersion": "2015-06-01",
                "properties": {
                    "httpPort": 8080,
                    "httpsPort": 443
                }
            }
        },
        
        {
            "name": "Creates CDN custom domain resource",
            "definition": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#/resourceDefinitions/customdomains",
            "json": {
                "type": "Microsoft.Cdn/profiles/endpoints/customdomains",
                "apiVersion": "2015-06-01",
                "properties": {
                    "hostName": "www.mywebsite.com"
                }
            }
        },
        
        {
            "name": "Creates CDN custom domain resource with no host name should fail",
            "expectedErrors": [
                {
                    "message": "Missing required property: hostName",
                    "dataPath": "/properties"
                }
            ],
            "definition": "http://schema.management.azure.com/schemas/2015-06-01/Microsoft.Cdn.json#/resourceDefinitions/customdomains",
            "json": {
                "type": "Microsoft.Cdn/profiles/endpoints/customdomains",
                "apiVersion": "2015-06-01",
                "properties": {
                }
            }
        }
    ]
}