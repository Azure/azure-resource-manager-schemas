{
    "tests": [
        {
            "name": "storageAccounts - Minimal",
            "definition": "https://schema.management.azure.com/schemas/2017-10-01/Microsoft.Storage.json#/resourceDefinitions/storageAccounts",
            "json": {
                "type": "Microsoft.Storage/storageAccounts",
                "apiVersion": "2017-10-01",
                "location": "West Us",
                "name": "sto725",
                "kind": "BlobStorage",
                "sku": {
                    "name" : "Standard_GRS"
                }
            }
        },

        {
            "name": "storageAccounts - StorageV2",
            "definition": "https://schema.management.azure.com/schemas/2017-10-01/Microsoft.Storage.json#/resourceDefinitions/storageAccounts",
            "json": {
                "type": "Microsoft.Storage/storageAccounts",
                "apiVersion": "2017-10-01",
                "location": "West Us",
                "name": "sto725",
                "kind": "StorageV2",
                "sku": {
                    "name" : "Standard_GRS"
                }
            }
        },

        {
            "name": "storageAccounts - Support https traffic only with true",
            "definition": "https://schema.management.azure.com/schemas/2017-10-01/Microsoft.Storage.json#/resourceDefinitions/storageAccounts",
            "json": {
                "type": "Microsoft.Storage/storageAccounts",
                "apiVersion": "2017-10-01",
                "location": "West Us",
                "name": "sto725",
                "kind": "StorageV2",
                "sku": {
                    "name" : "Standard_GRS"
                },
                "properties":{
                    "supportsHttpsTrafficOnly": true
                }
            }
        },

        {
            "name": "storageAccounts - Support https traffic only with false",
            "definition": "https://schema.management.azure.com/schemas/2017-10-01/Microsoft.Storage.json#/resourceDefinitions/storageAccounts",
            "json": {
                "type": "Microsoft.Storage/storageAccounts",
                "apiVersion": "2017-10-01",
                "location": "West Us",
                "name": "sto725",
                "kind": "StorageV2",
                "sku": {
                    "name" : "Standard_GRS"
                },
                "properties":{
                    "supportsHttpsTrafficOnly": false
                }
            }
        },

        {
            "name": "storageAccounts - Without sku property",
            "expectedErrors": [
                {
                    "message": "Missing required property: sku",
                    "dataPath": "/"
                }
            ],
            "definition": "https://schema.management.azure.com/schemas/2017-10-01/Microsoft.Storage.json#/resourceDefinitions/storageAccounts",
            "json": {
                "type": "Microsoft.Storage/storageAccounts",
                "apiVersion": "2017-10-01",
                "location": "West Us",
                "name": "sto725",
                "kind": "Storage"
            }
        },

        {
            "name": "storageAccounts - Without sku property",
            "expectedErrors": [
                {
                    "message": "Missing required property: sku",
                    "dataPath": "/"
                }
            ],
            "definition": "https://schema.management.azure.com/schemas/2017-10-01/Microsoft.Storage.json#/resourceDefinitions/storageAccounts",
            "json": {
                "type": "Microsoft.Storage/storageAccounts",
                "apiVersion": "2017-10-01",
                "location": "West Us",
                "name": "sto725",
                "kind": "BlobStorage"
            }
        }
    ]
}
