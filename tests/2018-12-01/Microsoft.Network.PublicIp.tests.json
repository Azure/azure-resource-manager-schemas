{
  "tests":[
    {
      "name":"Publicip tests - minimal resource",
      "definition":"https://schema.management.azure.com/schemas/2018-12-01/Microsoft.Network.json#/resourceDefinitions/publicIPAddresses",
      "json":{
        "apiVersion":"2018-12-01",
        "type":"Microsoft.Network/publicIPAddresses",
        "name":"[variables('publicIPAddressName')]",
        "location":"[resourceGroup().location]",
        "properties":{
          "publicIPAllocationMethod":"[parameters('publicIPAddressType')]"
        }
      }
    },
    {
      "name":"Publicip tests - fqdn and idletimeout",
      "definition":"https://schema.management.azure.com/schemas/2018-12-01/Microsoft.Network.json#/resourceDefinitions/publicIPAddresses",
      "json":{
        "apiVersion":"2018-12-01",
        "type":"Microsoft.Network/publicIPAddresses",
        "name":"[variables('publicIPAddressName')]",
        "location":"[resourceGroup().location]",
        "properties":{
          "publicIPAllocationMethod":"[parameters('publicIPAddressType')]",
          "idleTimeoutInMinutes":5,
          "publicIPAddressVersion":"IPv4",
          "dnsSettings":{
            "domainNameLabel":"[parameters('dnsLabelPrefix')]",
            "reverseFqdn":"[parameters('dnsLabelPrefix')]"
          }
        }
      }
    },
    {
      "name":"Publicip tests - no name, location",
      "definition":"https://schema.management.azure.com/schemas/2018-12-01/Microsoft.Network.json#/resourceDefinitions/publicIPAddresses",
      "expectedErrors":[
        {
          "message":"Missing required property: name",
          "dataPath":"/"
        },
        {
            "message": "Missing required property: location",
            "dataPath": "/"
        }
      ],
      "json":{
        "apiVersion":"2018-12-01",
        "type":"Microsoft.Network/publicIPAddresses",
        "properties":{
          "publicIPAllocationMethod":"[parameters('publicIPAddressType')]"
        }
      }
    },
    {
      "name":"Publicip tests - no publicIPAllocationMethod",
      "definition":"https://schema.management.azure.com/schemas/2018-12-01/Microsoft.Network.json#/resourceDefinitions/publicIPAddresses",
      "expectedErrors": [
        {
          "message": "Data does not match any schemas from \"oneOf\"",
          "dataPath": "/properties"
        }
      ],
      "json":{
        "apiVersion":"2018-12-01",
        "type":"Microsoft.Network/publicIPAddresses",
        "name":"[variables('publicIPAddressName')]",
        "location":"[resourceGroup().location]",
        "properties":{

        }
      }
    }
  ]
}
