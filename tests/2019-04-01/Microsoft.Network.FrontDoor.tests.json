{
  "tests": [
    {
      "name": "front door tests - minimal resource",
      "definition": "https://schema.management.azure.com/schemas/2019-04-01/Microsoft.Network.FrontDoor.json#/resourceDefinitions/frontDoors",
      "json": {
        "apiVersion": "2019-04-01",
        "type": "Microsoft.Network/frontDoors",
        "name": "[variables('frontDoorName')]",
        "location": "[resourceGroup().location]",
        "properties": {
          "routingRules": [
            {
              "name": "[variables('routingRuleName')]",
              "type": "Microsoft.Network/frontDoors/routingRules",
              "properties": {
                "frontendEndpoints": [
                  {
                    "id": "/frontendEndpoints/fe1"
                  }
                ],
                "patternsToMatch": [
                  "/*"
                ],
                "backendPool": {
                  "id": "/backendPools/bp1"
                }
              }
            }
          ],
          "frontendEndpoints": [
            {
              "name": "fe1",
              "type": "Microsoft.Network/frontDoors/frontendEndpoints",
              "properties": {
                "hostName": "subdomain.contoso.com"
              }
            }
          ],
          "backendPools": [
            {
              "name": "bp1",
              "type": "Microsoft.Network/frontDoors/backendPools",
              "properties": {
                "backends": [
                  {
                    "address": "backend1.contoso.com"
                  }
                ]
              }
            }
          ]
        }
      }
    }
  ]
}