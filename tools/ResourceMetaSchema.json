{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Azure Resource Meta-schema",
      
  "allOf": [
    {
      "$ref": "http://json-schema.org/draft-04/schema#"
    },
    {
      "$ref": "#/definitions/resourceMetaSchema"
    }
  ],

  "definitions": {
    "resourceMetaSchema": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/id" },
        "$schema": { "$ref": "#/definitions/$schema" },
        "title": { "$ref": "#/definitions/title" },
        "description": { "$ref": "#/definitions/description" },
        "resourceDefinitions": { "$ref": "#/definitions/resourceDefinitions" },
        "definitions": { "$ref": "#/definitions/definitions" }
      },
      "required": [ "$schema", "title", "description", "resourceDefinitions" ],
      "additionalProperties": false
    },
    "id": {
      "type": "string"
    },
    "$schema": {
      "type": "string",
      "minLength": 1,
      "format": "uri"
    },
    "title": {
      "type": "string"
    },
    "resourceDefinitions": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "$ref": "#/definitions/resource" }
    },
    "resource": {
      "type": "object",
      "properties": {
        "type": { "$ref": "#/definitions/resourceType" },
        "description": { "$ref": "#/definitions/description" },
        "required": { "$ref": "#/definitions/stringArrayEmptyOkay" },
        "properties": { "$ref": "#/definitions/resourceCommonProperties" }
      },
      "required": [ "description" ]
    },
    "resourceType": {
      "enum": [ "object" ]
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "stringArrayEmptyOkay": {
      "oneOf": [
        { "$ref": "http://json-schema.org/draft-04/schema#/definitions/stringArray" },
        {
          "enum": [ [] ]
        }
      ]
    },
    "resourceCommonProperties": {
      "type": "object",
      "properties": {
        "type": { "$ref": "#/definitions/resourceTypesArray" },
        "apiVersion": { "$ref": "#/definitions/resourceApiVersions" },
        "childResources": { "$ref": "#/definitions/childResources" },
        "properties": { "$ref": "#/definitions/resourceSpecificProperties" }
      },
      "required": [ "apiVersion", "type" ]
    },
    "resourceTypesArray": {
      "type": "object",
      "properties": {
        "enum": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "required": [ "enum" ],
      "additionalProperties": false
    },
    "resourceApiVersions": {
      "type": "object",
      "properties": {
        "enum": {
          "type": "array",
          "items": {
            "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/apiVersion"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "$ref": {
          "type": "string",
          "format": "uri",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "minProperties": 1,
      "maxProperties": 1
    },
    "childResources": {
      "type": "object"
    },
    "resourceSpecificProperties": {
      "type": "object",
      "properties": {
        "type": { "enum": [ "object" ] },
        "$ref": {
          "type": "string",
          "format": "uri"
        },
        "properties": {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/resourceProperty" }
        },
        "required": { "$ref": "#/definitions/stringArrayEmptyOkay" },
        "additionalProperties": { "$ref": "http://json-schema.org/draft-04/schema#/properties/additionalProperties" }
      },
      "additionalProperties": false,
      "maxProperties": 2
    },
    "resourceProperty": {
      "type": "object",
      "properties": {
        "$ref": {
          "type": "string",
          "format": "uri"
        },
        "items": { "$ref": "http://json-schema.org/draft-04/schema#/properties/items" },
        "oneOf": { "$ref": "#/definitions/resourcePropertyDefinitionOptions" },
        "type": { "enum": [ "string" ] },
        "minLength": {
          "type": "integer",
          "minimum": 1
        },
        "maxLength": {
          "type": "integer",
          "minimum": 1
        },
        "description": { "$ref": "#/definitions/description" }
      },
      "required": [ "description" ],
      "additionalProperties": false
    },
    "resourcePropertyDefinitionOptions": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "type": {
                "allOf": [
                  { "$ref": "http://json-schema.org/draft-04/schema#/definitions/simpleTypes" },
                  { "not": { "enum": [ "string", "number" ] } }
                ]
              }
            },
            "required": [ "type" ]
          },
          {
            "properties": {
              "type": { "enum": [ "string" ] },
              "pattern": { "$ref": "http://json-schema.org/draft-04/schema#/properties/pattern" }
            },
            "required": [ "type", "pattern" ]
          },
          {
            "properties": {
              "enum": { "$ref": "http://json-schema.org/draft-04/schema#/properties/enum" }
            },
            "required": [ "enum" ]
          },
          {
            "properties": {
              "$ref": { "format": "uri" }
            },
            "required": [ "$ref" ]
          },
          {
            "properties": {
              "oneOf": { "$ref": "#/definitions/resourcePropertyDefinitionOptions" }
            },
            "minProperties": 1,
            "maxProperties": 1,
            "additionalProperties": false
          }
        ]
      },
      "minItems": 2
    },
    "definitions": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "$ref": "#/definitions/definition" }
    },
    "definition": {
      "$ref": "http://json-schema.org/draft-04/schema#"
    }
  }
}