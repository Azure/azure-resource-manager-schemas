{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "allOf": [
    {
      "$ref": "http://json-schema.org/draft-04/schema#"
    },
    {
      "$ref": "#/definitions/templateTestsSchema"
    }
  ],

  "definitions": {
    "templateTestsSchema": {
      "properties": {
        "tests": {
          "type": "array",
          "minItems": 1,
          "items": {
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "expectedErrors": {
                "type": "array",
                "minLength": 1,
                "items": {
                  "properties": {
                    "message": {
                      "type": "string",
                      "minLength": 1
                    },
                    "dataPath": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [ "message", "dataPath" ],
                  "additionalProperties": false
                }
              },
              "definition": {
                "type": "string",
                "minLength": 1
              },
              "json": { }
            },
            "additionalItems": false,
            "additionalProperties": false,
            "required": [ "name", "definition", "json" ]
          }
        }
      },
      "required": [ "tests" ],
      "additionalItems": false,
      "additionalProperties": false
    }
  }
}